{
  "builds": [
    {
      "src": "package.json",
      "use": "@railway/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "variables": {
    "PORT": {
      "description": "Port to run the server on",
      "value": "8080"
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  }
}