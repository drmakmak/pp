{
  "builds": [
    {
      "src": "package.json",
      "use": "@railway/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "variables": {
    "PORT": {
      "description": "Port to run the server on",
      "value": "8080"
    },
    "PROTECT_FRONTEND": {
      "description": "Enable password protection",
      "value": "true"
    },
    "FRONTEND_PASSWORD": {
      "description": "Password for the frontend",
      "generator": {
        "format": "bytes",
        "length": 12
      }
    },
    "SESSION_SECRET": {
      "description": "Secret for session tokens",
      "generator": {
        "format": "bytes",
        "length": 32
      }
    }
  }
}